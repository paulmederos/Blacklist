<% content_for :header_text do %>
  <h1>File a complaint</h1>
  <p>We strive to empower the customer to force a response from businesses.</p>

  <%= form_tag(businesses_path, :method => :get)  do |f| -%>
  <%= search_field_tag :search, params[:search] -%>
  <%= submit_tag "Search" -%>
<%- end -%>

<% end %>


<h1>Listing businesses</h1>


<table>
  <tr>
    <th>Name</th>
    <th>Street address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th></th>
  </tr>

<% @businesses.each do |business| %>
  <tr>
    <td><%= business.name %></td>
    <td><%= business.street_address %></td>
    <td><%= business.city %></td>
    <td><%= business.state %></td>
    <td><%= business.zip %></td>
    <td><%= link_to 'Show', business %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= t("businesses.can_not_find") -%> <%= link_to t("businesses.add_new"), new_business_path %></p>
